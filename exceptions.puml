@startuml
'https://plantuml.com/class-diagram

class Exception{
+ +toString(): String
}
class BudgetRunoutException{
- -player: Player
- -playerBudget: int
+ +BudgetRunoutException(player: Player)
+ +getMessage(): String
+ +toString(): String
}
class MedicalException{
- -population: int
- -activeCases: int
+ +getMessage(): String
+ +toString(): String
}
class NoEnoughBudgetException{
- -player: Player
- -playerBudget: int
- -cost: int
+ +getMessage(): String
+ +toString(): String
}

Exception <|-- BudgetRunoutException
Exception <|-- NoEnoughBudgetException
Exception <|-- MedicalException

@enduml